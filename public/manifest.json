{
  "manifest_version": 3,
  "name": "AutoTester",
  "description": "Smart test for smart businesses",
  "short_name": "AutoTester",
  "version": "1.0.0",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "AutoTester"
  },
  "permissions": ["activeTab", "scripting", "tabs", "storage", "identity"],
  "host_permissions": ["<all_urls>"]
}
